@version:"<%= node['syslog-ng']['install']['copr_repo_version'] -%>"
@include "scl.conf"

#
# Generated by Chef for <%= node['fqdn'] %>
# Do NOT modify this file by hand, any changes will be overwritten.
#

# syslog-ng configuration file.
#
# This should behave pretty much like the original syslog on RedHat. But
# it could be configured a lot smarter.
#
# See syslog-ng(8) and syslog-ng.conf(5) for more information.
#
# Note: it also sources additional configuration files (*.conf)
#       located in /etc/syslog-ng/conf.d/

<% unless node['syslog-ng']['options'].nil? || node['syslog-ng']['options'].empty? -%>
options {
    <% node['syslog-ng']['options'].each do |key, value| -%>
    <%= key %> (<%= value %>);
    <% end -%>
};
<% end -%>

# Sources
<% unless node['syslog-ng']['source'].nil? || node['syslog-ng']['source'].empty? -%>
<% node['syslog-ng']['source'].each do |key, hash| -%>
source <%= key -%> {
<% hash.each do |driver, options| -%>
    <%= driver %> (<%= options.each { |option| option } -%>)
<% end -%>
};
<% end -%>
<% end -%>

